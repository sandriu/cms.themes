name = CMS Frontend
description = CMS Frontend theme is based on Drupal Twitter Bootstrap 3.0 theme.
core = 7.x
base theme = bootstrap

; Regions
regions[primary_menu]     = 'Primary Menu'
regions[secondary_menu] = 'Secondary Menu'
regions[tertiary_menu] = 'Tertiary Menu'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[before_content] = 'Before content'
regions[after_content] = 'After content'
;regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[slide_instruments] = 'Slideshow Instruments'
regions[footer_menu] = 'FooterMenu'
regions[footer_first_row_left] = 'FooterFirstRowLeft'
regions[footer_first_row_right] = 'FooterFirstRowRight'
regions[footer_second_row_left] = 'FooterSecondRowLeft'
regions[footer_second_row_right] = 'FooterSecondRowRight'

; Stylesheets
stylesheets[all][] = css/mobile.css

;**********************************
