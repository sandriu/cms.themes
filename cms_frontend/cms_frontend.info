;**********************************
;
; ; Scripts
;
scripts[] = 'bootstrap-3.0.0/js/affix.js'
scripts[] = 'bootstrap-3.0.0/js/alert.js'
scripts[] = 'bootstrap-3.0.0/js/button.js'
scripts[] = 'bootstrap-3.0.0/js/carousel.js'
scripts[] = 'bootstrap-3.0.0/js/collapse.js'
scripts[] = 'bootstrap-3.0.0/js/dropdown.js'
scripts[] = 'bootstrap-3.0.0/js/modal.js'
scripts[] = 'bootstrap-3.0.0/js/tooltip.js'
scripts[] = 'bootstrap-3.0.0/js/popover.js'
scripts[] = 'bootstrap-3.0.0/js/scrollspy.js'
scripts[] = 'bootstrap-3.0.0/js/tab.js'
scripts[] = 'bootstrap-3.0.0/js/transition.js'
